	<div class="container">
    <h1>Edit Profile</h1>
  	<hr>
	<div class="row">

		<!-- PROFILE PICTURE -->
		<div class="col-lg-3">
			<div class="text-center">
				<img src="images/profile-picture-standard.gif" class="avatar img-circle" alt="avatar">
				<h6>Upload a different photo...</h6>
				<span class="btn btn-default btn-file"><input type="file"></span>
			</div>
		</div>

		<!-- PROFILE FORM -->
		<div class="col-lg-9 personal-info">
			<div class="alert alert-info alert-dismissable">
				<a class="panel-close close" data-dismiss="alert">Ã—</a>
				<i class="fa fa-coffee"></i>
				<strong>Don't make</strong> the content of this form <strong>public</strong>. Press <strong>Save changes</strong> to finish.
			</div>
			<h3>Personal info</h3>
        
        <form class="form-horizontal" role="form" action="/profile" method="get">
            <div class="form-group">
                <label class="col-md-3 control-label">Username:</label>
                <div class="col-md-8">
                    <input class="form-control" type="text" value=<%= user.local.username %>>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Password:</label>
                <div class="col-md-8">
                    <input class="form-control" type="password" value="password">
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 control-label">Email:</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" value=<%= user.local.email %>>
                </div>
            </div>
            <div class="form-group">
            <label class="col-lg-3 control-label">First name:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" value=<%= user.local.first_name %>>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Last name:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" value=<%= user.local.last_name %>>
            </div>
          </div>
